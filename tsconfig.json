{
  "esModuleInterop": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "resolveJsonModule": true,
    "lib": ["es2022", "dom"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./src/types/*"
    ],
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./types/*.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
